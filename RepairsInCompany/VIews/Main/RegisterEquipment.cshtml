@model Tuple<string, int>;
@{
	Layout = "_Layout";
}

<div class="container mt-5">
	<div class="row justify-content-center alighn-items-center">
		<div class="col-sm-12 col-md-12 col-lg-4">
			<h3 class="md-3">Register equipment @Model.Item1</h3>
			<form method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="mb-3">
					<input for="equipmentName" value="@Model" hidden/>
					<label class="form-label" for="periodInDays">Repair period in days</label>
					<input type="number" name="periodInDays" class="form-control" value="@Model.Item2"/>
					<p class="text-danger">@ViewBag.Error</p>
				</div>
				<button type="submit" class="btn btn-primary">Register equipment</button>
			</form>
		</div>
	</div>
</div>

