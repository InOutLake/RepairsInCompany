@model Tuple<string, int>;
@{
	Layout = "_Layout";
}

<div class="container mt-5">
	<div class="row justify-content-center alighn-items-center">
		<div class="col-sm-12 col-md-12 col-lg-4">
			<h3 class="md-3">Add new equipment</h3>
			<form method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="mb-3">
					<label class="form-label" for="equipmentName">Equipment name</label>
					<input type="text" name="equipmentName" class="form-control" />
					<p class="text-danger">@ViewBag.Error</p>
				</div>
				<button type="submit" class="btn btn-primary">Add equipment</button>
			</form>
		</div>
	</div>
</div>

