<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="header" class="header">
        <div class="row d-flex justify-content-end">
            <div class="col-3 text-end text-middle">
                @Html.ActionLink("Schedule", "ScheduleMonthGraph", "Main", htmlAttributes: (new { @class="btn btn-primary", @style="margin-top: 15px" }))
                @Html.ActionLink("Equipment Info", "EquipmentList", "Main", htmlAttributes: (new { @class="btn btn-primary", @style="margin-top: 15px" }))
            </div>
            <div class="col-3 text-end">
                <span>@User.Identity.Name</span>
                @Html.ActionLink("Log out", "LogOut", "Auth", null, new { @class="btn btn-danger ml-auto", @style="margin: 15px"})
            </div>
        </div>
        <hr style="{border: 1px; height: 5px}" />
    </div>

    <div id="main-content">
        @RenderBody()
    </div>

    <div id="footer">
    </div>
</body>

<script src="~/js/main.js"></script>
</html>
